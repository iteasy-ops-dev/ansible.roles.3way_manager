#!/bin/bash
# 변수 선언
for arg in "$@"; do
  case $arg in
    --bin=*) BIN="${arg#*=}" ;; 
    --home_dir=*) HOME_DIR="${arg#*=}" ;; 
    --vhost_path=*) VHOST_CONF_NAME="${arg#*=}" ;; 
    --cband_path=*) CBAND_CONF_NAME="${arg#*=}" ;; 
    --log_dir=*) LOG_DIR="${arg#*=}" ;; 
    --account=*) USER_ACCOUNT="${arg#*=}" ;; 
    --domain=*) DOMAIN="${arg#*=}" ;; 
    --db_name=*) DB_NAME="${arg#*=}" ;; 
    --db_user=*) DB_USER="${arg#*=}" ;; 
    --db_admin=*) DB_ROOT_USER="${arg#*=}" ;; 
    --db_admin_passwd=*) DB_ROOT_PASSWORD="${arg#*=}" ;; 
     *) 
        echo "Unknown option: $arg" 
        exit 1
        ;;
  esac
done

