# fi

# # cband 삭제 (cband.conf에서 해당 계정 관련 설정 주석 처리)
# echo "CBand 설정에서 $USER_ACCOUNT 사용자 설정 주석 처리 중..."
# if grep -q "<CBandUser cband$USER_ACCOUNT>" "$CBAND_CONF_NAME"; then
